{
  "name": "@navo/server",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "npm@10",
  "scripts": {
    "dev": "dotenvx run -o -e .env -e .env.local -- tsx watch src/server.ts",
    "build": "tsc -p ./tsconfig.json",
    "start": "dotenvx run -e .env -- node dist/server.js",
    "lint": "eslint . --ext .ts --config ../eslint.config.js",
    "test": "jest --config jest.config.ts",
    "db:generate": "cd .. && npx dotenvx run -f .env -f .env.local -- npx drizzle-kit generate",
    "db:push": "cd .. && npx dotenvx run -f .env -f .env.local -- npx drizzle-kit push",
    "db:pull": "dotenvx run -e .env -e .env.local -- drizzle-kit introspect --config ../drizzle.config.ts",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.49.0",
    "@fastify/cors": "^11.1.0",
    "@fastify/static": "^8.2.0",
    "@google/generative-ai": "^0.15.0",
    "@types/uuid": "^10.0.0",
    "cors": "^2.8.5",
    "dompurify": "^3.0.6",
    "drizzle-orm": "^0.44.5",
    "fastify": "^5.5.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "pino": "^9.9.0",
    "postgres": "3.4.5",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^24.2.1",
    "@types/pg": "^8.15.5",
    "drizzle-kit": "^0.31.4",
    "jest": "^30.1.2",
    "pino-pretty": "^13.1.1",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.5.4"
  }
}
