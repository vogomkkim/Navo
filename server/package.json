{
  "name": "@navo/server",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "dotenvx run -o -e .env -e .env.local -- npx tsx watch src/bootstrap.ts",
    "build": "tsc -p ./tsconfig.json",
    "start": "dotenvx run -o -e .env -e .env.local -- node dist/bootstrap.js",
    "lint": "eslint . --ext .ts --config ../eslint.config.js",
    "test": "vitest",
    "sim:gen": "tsx src/scripts/run-code-generator.ts",
    "db:generate": "cd .. && dotenvx run -f .env -f .env.local -- drizzle-kit generate",
    "db:push": "cd .. && dotenvx run -f .env -f .env.local -- drizzle-kit push",
    "db:pull": "dotenvx run -e .env -e .env.local -- drizzle-kit introspect --config ../drizzle.config.ts",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.49.0",
    "@fastify/cors": "^11.1.0",
    "@fastify/static": "^8.2.0",
    "@google/generative-ai": "^0.15.0",
    "@navo/shared": "file:../packages/shared",
    "@types/uuid": "^10.0.0",
    "cors": "^2.8.5",
    "diff-match-patch": "^1.0.5",
    "dompurify": "^3.0.6",
    "drizzle-orm": "^0.44.5",
    "fastify": "^5.5.0",
    "glob": "^7.2.3",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "pino": "^9.9.0",
    "postgres": "3.4.5",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@babel/parser": "^7.28.4",
    "@babel/types": "^7.28.4",
    "@jest/types": "^30.0.5",
    "@types/cors": "^2.8.19",
    "@types/diff-match-patch": "^1.0.36",
    "@types/glob": "^8.1.0",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^24.2.1",
    "@types/pg": "^8.15.5",
    "drizzle-kit": "^0.31.4",
    "pino-pretty": "^13.1.1",
    "recast": "^0.23.11",
    "typescript": "^5.9.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
