{
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "../dist/server",
    "rootDir": ".",
    "types": ["node", "jest"],
    "baseUrl": ".",
    "paths": {
      "@/modules/*": ["src/modules/*"],
      "@/shared/*": ["../packages/shared/src/*"],
      "@/lib/*": ["src/lib/*"],
      "@/db/*": ["../db/*"] // 루트의 db 디렉토리 참조
    }
  },
  "include": ["./**/*.ts"],
  "exclude": ["../node_modules", "../dist"]
}
