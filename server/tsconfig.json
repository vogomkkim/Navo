{
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/db": ["src/modules/db"],
      "@/db/*": ["src/modules/db/*"],
      "@/schema": ["./drizzle/schema.ts"],
      "@/drizzle/*": ["./drizzle/*"],
      "@/lib/*": ["src/lib/*"],
      "@/core/*": ["src/core/*"],
      "@/modules/*": ["src/modules/*"],
      "@/config": ["src/config"],
      "@/config/*": ["src/config/*"],
      "@/shared/*": ["../packages/shared/*"]
    },
    "types": ["node", "vitest/globals"]
  },
  "include": [
    "src/**/*.ts",
    "drizzle/**/*.ts",
    "jest.config.ts",
    "config/**/*.ts",
    "**/*.d.ts"
  ],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
