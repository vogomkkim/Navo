{
  "name": "navo",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "prebuild": "npm run db:generate",
    "build": "npm run build:server",
    "build:server": "tsc -p config/tsconfig.json",
    "build:react": "cross-env-shell \"cd frontend && npm run build\"",
    "build:full": "npm run build:server && npm run build:react",
    "demo": "npm run build && node dist/navo/demo.js",
    "start": "node dist/navo/start.js",
    "dev:server": "cross-env PORT=3001 tsx navo/start.ts",
    "dev:react": "cross-env-shell \"cd frontend && npm run dev\"",
    "test": "cross-env-shell \"cd frontend && npm run test\"",
    "lint": "eslint . --ext .ts --config config/eslint.config.js",
    "format": "prettier --write . --config config/.prettierrc",
    "db:generate": "drizzle-kit generate --config config/drizzle.config.ts",
    "db:push": "drizzle-kit push --config config/drizzle.config.ts",
    "db:pull": "drizzle-kit introspect --config config/drizzle.config.ts"
  },
  "engines": {
    "node": "22.x"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^24.2.1",
    "@types/pg": "^8.15.5",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "copyfiles": "^2.4.1",
    "cross-env": "^10.0.0",
    "dotenv-cli": "^10.0.0",
    "drizzle-kit": "^0.30.2",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "nodemon": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.40.0"
  },
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/static": "^8.2.0",
    "@google/generative-ai": "^0.15.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@vercel/speed-insights": "^1.2.0",
    "cors": "^2.8.5",
    "dompurify": "^3.0.6",
    "dotenv": "^17.2.1",
    "drizzle-orm": "0.36.4",
    "fastify": "^5.5.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "postgres": "3.4.5"
  },
  "drizzle": {
    "config": "config/drizzle.config.ts"
  }
}
