{
  "name": "navo",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "prebuild": "npm run db:generate",
    "build": "npm run build:server && npm run build:web",
    "build:server": "tsc -p config/tsconfig.json",
    "build:web": "webpack --mode production --config config/webpack.config.js",
    "demo": "npm run build && node dist/navo/demo.js",
    "start": "node dist/navo/start.js",
    "dev": "webpack-dev-server --mode development --config config/webpack.config.js",
    "lint": "eslint . --ext .ts --config config/eslint.config.js",
    "format": "prettier --write . --config config/.prettierrc",
    "db:generate": "drizzle-kit generate --config config/drizzle.config.ts",
    "db:push": "drizzle-kit push --config config/drizzle.config.ts",
    "db:pull": "drizzle-kit introspect --config config/drizzle.config.ts"
  },
  "engines": {
    "node": "22.x"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^24.2.1",
    "@types/pg": "^8.15.5",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "copy-webpack-plugin": "^13.0.1",
    "copyfiles": "^2.4.1",
    "dotenv-cli": "^10.0.0",
    "drizzle-kit": "^0.30.2",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "html-webpack-plugin": "^5.6.4",
    "nodemon": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "ts-loader": "^9.5.4",
    "tsx": "^4.19.2",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.40.0",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "dependencies": {
    "@google/generative-ai": "^0.15.0",
    "@vercel/speed-insights": "^1.2.0",
    "cors": "^2.8.5",
    "dompurify": "^3.0.6",
    "dotenv": "^17.2.1",
    "drizzle-orm": "0.36.4",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "postgres": "3.4.5"
  },
  "drizzle": {
    "config": "config/drizzle.config.ts"
  }
}
